{
  "name": "@notifications/root",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "bun run lerna:link && lerna run prepare && bun run build:core:ios && (bun run tests_rn:ios:pod:install || true)",
    "precommit": "bun run build:all:clean && bun run prepare && bun run build:all && bun run gen:reference && bun run validate:all && bun run test:all",
    "build:all": "bun run build:core && bun run build:rn",
    "build:core": "bun run build:core:android && bun run build:core:ios",
    "build:core:android": "cd ./android && ./gradlew assembleRelease compileDebugJavaWithJavac compileDebugUnitTestJavaWithJavac publish",
    "build:all:clean": "rimraf android/build && rimraf packages/react-native/android/libs && rimraf android/.gradle && rimraf ios/build && lerna run build:clean",
    "build:rn": "cd packages/react-native && bun run build",
    "build:rn:watch": "cd packages/react-native && bun run build:watch",
    "build:core:ios": "./build_ios_core.sh",
    "format:all": "bun run format:core && bun run format:rn",
    "format:all:check": "bun run format:core:check && bun run format:rn:check",
    "format:rn": "bun run format:rn:android && bun run format:rn:ios",
    "format:rn:check": "bun run format:rn:android:check && bun run format:rn:ios:check",
    "format:rn:android": "cd packages/react-native/android && bun run format:android",
    "format:rn:android:check": "cd packages/react-native/android && bun run format:android:check",
    "format:rn:ios": "cd packages/react-native/ios && bun run format:ios",
    "format:rn:ios:check": "cd packages/react-native/ios && bun run format:ios:check",
    "format:core": "bun run format:core:android && bun run format:core:ios",
    "format:core:check": "bun run format:core:android:check && bun run format:core:ios:check",
    "format:core:android": "cd android && bun run format:android",
    "format:core:android:check": "cd android && bun run format:android:check",
    "format:core:ios": "cd ios && bun run format:ios",
    "format:core:ios:check": "cd ios && bun run format:ios:check",
    "format:android": "bunx google-java-format --replace -i $(find . -type f -name \"*.java\" ! -path \"*/node_modules/*\" ! -path \"*/generated/*\")",
    "format:android:check": "bunx google-java-format --set-exit-if-changed --replace -i $(find . -type f -name \"*.java\" ! -path \"*/node_modules/*\" ! -path \"*/generated/*\")",
    "format:ios": "bunx clang-format -i --glob=\"ios/**/*.{h,cpp,m,mm}\" --style=Google",
    "format:ios:check": "bunx clang-format --glob=\"ios/**/*.{h,cpp,m,mm}\" --style=Google -n -Werror",
    "validate:all": "bun run validate:all:js && bun run validate:all:ts && bun run gen:reference",
    "validate:all:js": "eslint . --ext .js,.jsx,.ts,.tsx --resolve-plugins-relative-to .",
    "validate:all:ts": "tsc --project ./",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:link": "lerna link && lerna exec -- bun link",
    "lerna:clean": "lerna clean",
    "gen:reference": "bunx typedoc",
    "test:all": "bun run test:core:android && bun run tests_rn:test && bun run tests_rn:android:test && bun run tests_rn:ios:test",
    "test:core:android": "cd android && ./gradlew testDebugUnit",
    "tests_rn:packager": "cd tests_react_native && npx react-native start",
    "tests_rn:packager:reset-cache": "cd tests_react_native && npx react-native start --reset-cache",
    "run:android": "cd tests_react_native && npx react-native run-android  --variant 'debug'",
    "run:ios": "cd tests_react_native && npx react-native run-ios --scheme=Notifee --simulator 'iPhone 16'",
    "tests_rn:test": "cd tests_react_native && jest",
    "tests_rn:test-watch": "cd tests_react_native && jest --watch",
    "tests_rn:test-coverage": "cd tests_react_native && jest --coverage",
    "tests_rn:android:build": "cd tests_react_native/android && ./gradlew assembleDebug -DtestBuildType=debug",
    "tests_rn:android:test": "cd tests_react_native && npm_config_yes=true npx cavy-cli run-android --no-jetifier",
    "tests_rn:ios:test": "cd tests_react_native && npm_config_yes=true npx cavy-cli run-ios --scheme=Notifee --simulator 'iPhone 16'",
    "tests_rn:ios:pod:install": "cd tests_react_native && npm_config_yes=true npx pod-install && cd .."
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.0.1",
    "@react-native-community/eslint-plugin": "^1.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "clang-format": "^1.6.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-ft-flow": "^3.0.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "google-java-format": "^1.4.0",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "remark-link-rewrite": "^1.0.7",
    "rimraf": "^3.0.2",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.6.2",
    "typedoc-plugin-remark": "^2.0.1",
    "typescript": "^5.7.2"
  },
  "resolutions": {
    "@types/node": "^17.0.21"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*",
    "tests_react_native"
  ],
  "dependencies": {
    "axios": "^0.26.0",
    "shelljs": "^0.8.5"
  },
  "packageManager": "bun@1.3.9"
}
